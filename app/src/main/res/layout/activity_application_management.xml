<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".student.ApplicationManagementActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnViewApplicationsSent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Application Requests Sent"
            android:padding="16dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSendNewApplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send a New Application Request"
            android:padding="16dp"
            android:backgroundTint="@color/design_default_color_secondary"/>

    </LinearLayout>
</LinearLayout>